{
  "$schema": "https://tauri.app/v2/api/config",
  "productName": "本地校验器",
  "version": "0.1.0",
  "identifier": "cn.zstar.localcheck",
  "build": {
    "beforeDevCommand": "cargo run --bin frontend-dev",
    "beforeBuildCommand": "cargo run --bin frontend-build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "本地校验器",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "maximized": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}