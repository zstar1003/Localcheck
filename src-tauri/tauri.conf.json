{
  "$schema": "https://tauri.app/v1/config-schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "cd .. && npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "本地校验器",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "readFile": true,
        "readDir": true,
        "scope": [
          "**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "cn.zstar.localcheck",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "本地校验器",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "maximized": true
      }
    ]
  }
}